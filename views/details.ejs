<!-- the user can watch the details of a product-->
<!doctype html>
<html lang="en">
  <head>
    <% include partials/head %>
    <!-- Custom styles for this template -->
    <link href="/mycss/details.css" rel="stylesheet">
    
  </head>

  <body>

    <header>
      <% include partials/navbar %>
    </header>

    <main role="main">
        <form method="POST" id="detailsForm">
        <div class="container py-5">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <img src="<%= product.image %>" class="img-fluid img-thumbnail">
                </div>
                <div class="col-xs-12 col-sm-6">

                  <%- include partials/message error %>
                  
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col"><%= product.name %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">Description</th>
                        <td><%= product.description %></td>
                      </tr>
                      <tr>
                        <th scope="row">Size</th>
                        <td>
                          <select name="size" class="custom-select"  required>
                            <option value="" disabled selected>Choose...</option>
                            <% for(var i=0; i<product.size.length; i++ ){ 
                              if(product.quantity[i] > 0 ){ %>
                              <option value="<%= i %>">
                                  <%= product.size[i] %> (in stock: <%= product.quantity[i]%>)
                              </option>
                            <% }} %>
                          </select>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Color</th>
                        <td>
                          <%= product.color %>
                          <!--select class="custom-select">
                            <option selected>Choose...</option>
                            <option value="black">black</option>
                            <option value="white">white</option>
                            <option value="orange">orange</option>
                          </select-->
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Price (HUF)</th>
                        <td><%= product.price %></td>
                      </tr>
                      <tr>
                        <th scope="row">Quantity</th>
                        <td>
                          <input name="quantity" type="number" class="form-control" aria-describedby="" placeholder="" required>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                  <a class="btn btn-primary" href="/" role="button">Back</a>
                  <button type="submit" class="btn btn-success float-right" role="button">Add to cart</a>
                  <div class="clearfix" />
                </div>
            </div>
        </div>
      </form>
    </main>

    <footer>
      <% include partials/footer %>
      <script src="/js/details.js"></script>
    </footer>
   </body>
</html>